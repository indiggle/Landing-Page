function doPost(e) {
  const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName("Landing Page"); // or "CRM"
  const data = JSON.parse(e.postData.contents);

  // Save to sheet
  sheet.appendRow([
    data.firstname,
    data.lastname,
    data.email,
    data.phone,
    data.message,
    new Date()
  ]);

  // Send automatic email
  MailApp.sendEmail({
    to: data.email,
    subject: "Thanks for reaching out to IÃ±die Studios ðŸŽ¶",
    htmlBody: `
      <p>Hi ${data.firstname},</p>
      <p>Thank you for submitting your details to IÃ±die Studios! We're excited to help you with your recording journey.</p>
      <p>We'll be in touch soon. Stay tuned!</p>
      <p>ðŸŽ§ â€” IÃ±die Studios Team</p>
    `
  });

  return ContentService.createTextOutput(
    JSON.stringify({ result: "success" })
  ).setMimeType(ContentService.MimeType.JSON);
}
